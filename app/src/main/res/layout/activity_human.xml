<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HumanActivity"
    android:layout_margin="20dp">

    <LinearLayout
        android:id="@+id/up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btBerjalan"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Berjalan"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/btTidur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tidur"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/up"
        android:id="@+id/down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btMakan"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Makan"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/btBerlari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Berlari"/>

    </LinearLayout>

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/down"
        android:id="@+id/ivGambar"
        android:src="@drawable/default_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>